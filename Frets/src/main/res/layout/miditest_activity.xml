<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/darker_gray"
              android:orientation="vertical"
              tools:context="com.bondevans.frets.fretlist.MidiTest">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSustain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sustain"/>

        <Spinner
            android:id="@+id/spinnerInstruments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:enabled="false"
            android:textColor="@color/background_material_light"/>

        <Button
            android:id="@+id/buttonCsharp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/background_material_dark"
            android:text="C#"
            android:textColor="@color/background_material_light"/>

        <Button
            android:id="@+id/buttonDsharp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/background_material_dark"
            android:text="D#"
            android:textColor="@color/background_material_light"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/darker_gray"
            android:enabled="false"
            android:textColor="@color/background_material_light"/>

        <Button
            android:id="@+id/buttonFsharp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/background_material_dark"
            android:text="F#"
            android:textColor="@color/background_material_light"/>

        <Button
            android:id="@+id/buttonGsharp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/background_material_dark"
            android:text="G#"
            android:textColor="@color/background_material_light"/>

        <Button
            android:id="@+id/buttonAsharp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/background_material_dark"
            android:text="A#"
            android:textColor="@color/background_material_light"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/darker_gray"
            android:enabled="false"
            android:textColor="@color/background_material_light"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:enabled="false"
            android:textColor="@color/background_material_light"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonC"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_weight="1"
            android:background="@color/background_material_light"
            android:text="C"
            android:textColor="@color/background_material_dark"/>

        <Button
            android:id="@+id/buttonD"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_weight="1"
            android:background="@color/background_material_light"
            android:text="D"
            android:textColor="@color/background_material_dark"/>

        <Button
            android:id="@+id/buttonE"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_weight="1"
            android:background="@color/background_material_light"
            android:text="E"
            android:textColor="@color/background_material_dark"/>

        <Button
            android:id="@+id/buttonF"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_weight="1"
            android:background="@color/background_material_light"
            android:text="F"
            android:textColor="@color/background_material_dark"/>

        <Button
            android:id="@+id/buttonG"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="4"
            android:layout_row="0"
            android:layout_weight="1"
            android:background="@color/background_material_light"
            android:text="G"
            android:textColor="@color/background_material_dark"/>

        <Button
            android:id="@+id/buttonA"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="5"
            android:layout_row="0"
            android:layout_weight="1"
            android:background="@color/background_material_light"
            android:text="A"
            android:textColor="@color/background_material_dark"/>

        <Button
            android:id="@+id/buttonB"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="6"
            android:layout_row="0"
            android:layout_weight="1"
            android:background="@color/background_material_light"
            android:text="B"
            android:textColor="@color/background_material_dark"/>

        <Button
            android:id="@+id/buttonC2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="7"
            android:layout_row="0"
            android:layout_weight="1"
            android:background="@color/background_material_light"
            android:text="C"
            android:textColor="@color/background_material_dark"/>

    </LinearLayout>

</LinearLayout>