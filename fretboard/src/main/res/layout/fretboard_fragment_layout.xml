<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/abc_control_padding_material"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingEnd="@dimen/abc_control_padding_material" />

    <Spinner
        android:id="@+id/track_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <view
        android:id="@+id/fretboard"
        class="com.bondevans.fretboard.fretboardplayer.FretboardView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.01">

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/bpm"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/bpmText"
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            />

    </LinearLayout>


</LinearLayout>